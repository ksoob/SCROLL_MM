<script>
	window.onscroll = function(){
		console.log(document.body.scrollTop);
		var scrollH = document.body.scrollTop;
		if(scrollH > 10){
			header.style.height = "100px";
			header.style.position = "fixed";
			header.style.top = "0px";
			header.style.zIndex = "9999"
			header.style.background = "#416b52";
			
			main.style.height = "0px";
			main.style.paddingTop = "-10px";
			main.style.background = "none"
			main.style.top = "-13px";

			menu.style.top = "calc(50% + 650px)";
			logo.style.width = "400px";
			logo.style.left = "calc(50% - 200px)"
			logo.style.top = "10px";
			logo.style.paddingTop = "20px";
			
			
			
		}else{
			header.style.height = "300px";
			header.style.position = "relative";
			header.style.top = "0px";
			header.style.background = "#416b52";
			
			main.style.height = "10px";
			main.style.paddingTop = "1px";
			main.style.background = "none"
			main.style.top = "0px";

			menu.style.top = "1000px";
			logo.style.width = "200px";
			logo.style.left = "calc(50% - 100px)"
			logo.style.top = "0px";
			logo.style.paddingTop = "75px";
			
			
		}

		if(scrollH > 50){
			img2.style.paddingTop = "-900px";
			
			menuA.style.background = "#416b52";
			menuA.style.color = "white";
		}else{
			img2.style.paddingTop = "-900px";
			
			menuA.style.background = "white";
			menuA.style.color = "black";
			
			
		}

		if(scrollH > 460){
			menuB.style.background = "#416b52";
			menuB.style.color = "white";
		}else{
			menuB.style.background = "white";
			menuB.style.color = "black";
		}

		

		if(scrollH > 950){

			menuC.style.background = "#416b52";
			menuC.style.color = "white";
		}else{
			
			menuC.style.background = "white";
			menuC.style.color = "black";
		}

		if(scrollH > 1650){

			menuD.style.background = "#416b52";
			menuD.style.color = "white";
		}else{

			menuD.style.background = "white";
			menuD.style.color = "black";
		}

		if(scrollH > 2200){
			
			menuE.style.background = "#416b52";
			menuE.style.color = "white";
		}else{
			
			menuE.style.background = "white";
			menuE.style.color = "black";
		}

		if(scrollH > 2700){
		    
			menuF.style.background = "#416b52";
			menuF.style.color = "white";
		}else{
		    
			menuF.style.background = "white";
			menuF.style.color = "black";
		}

		if(scrollH > 2830){
		    menu.style.top = "1000px";
		}else{
		    menu.style.top = "calc(50% + 650px)";
		}
		


	}
</script>
